<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>nhanqt.filter.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>nhanqt.listener.MyContextServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>nhanqt.servlet.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAccountServlet</servlet-name>
        <servlet-class>nhanqt.servlet.LoginAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutAccountServlet</servlet-name>
        <servlet-class>nhanqt.servlet.LogoutAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/CreateAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAccountServlet</servlet-name>
        <url-pattern>/LoginAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutAccountServlet</servlet-name>
        <url-pattern>/LogoutAccountServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>SE140052</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
